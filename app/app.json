{
  "expo": {
    "name": "SplitBill",
    "slug": "splitbill",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B35"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.splitbill.app",
      "infoPlist": {
        "NSCameraUsageDescription": "SplitBill needs camera access to scan receipts and bills",
        "NSPhotoLibraryUsageDescription": "SplitBill needs photo library access to import bill images"
      }
    },
    "android": {
      "package": "com.splitbill.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "useNextNotificationsApi": true,
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "backgroundColor": "#FF6B35",
      "themeColor": "#FF6B35"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SplitBill to access your camera to scan receipts"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow SplitBill to access your photos to import bills"
        }
      ],
      "expo-font",
      [
        "expo-notifications",
        {
          "color": "#FF6B35"
        }
      ]
    ],
    "updates": {
      "url": "https://u.expo.dev/db7eb830-0c3b-46d3-92ba-49a9b072eb81"
    },
    "runtimeVersion": "1.0.0",
    "extra": {
      "apiBaseUrl": "https://splitbill-i6ou.onrender.com/api",
      "apiHost": "https://splitbill-i6ou.onrender.com",
      "eas": {
        "projectId": "db7eb830-0c3b-46d3-92ba-49a9b072eb81"
      }
    },
    "owner": "saichaitanyakumar"
  }
}
