{
  "expo": {
    "name": "SplitBill",
    "slug": "splitbill",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B35"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.splitbill.app",
      "infoPlist": {
        "NSCameraUsageDescription": "SplitBill needs camera access to scan receipts and bills",
        "NSPhotoLibraryUsageDescription": "SplitBill needs photo library access to import bill images"
      }
    },
    "android": {
      "package": "com.splitbill.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "useNextNotificationsApi": true,
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "backgroundColor": "#FF6B35",
      "themeColor": "#FF6B35"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SplitBill to access your camera to scan receipts"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow SplitBill to access your photos to import bills"
        }
      ],
      "expo-font",
      [
        "expo-notifications",
        {
          "color": "#FF6B35"
        }
      ]
    ],
    "updates": {
      "url": "https://u.expo.dev/7c726d40-818b-4412-92f4-0df041e304b1"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "extra": {
      "apiBaseUrl": "https://splitbill-i6ou.onrender.com/api",
      "apiHost": "https://splitbill-i6ou.onrender.com",
      "eas": {
        "projectId": "7c726d40-818b-4412-92f4-0df041e304b1"
      }
    },
    "owner": "saichaitanyakumar2003"
  }
}
